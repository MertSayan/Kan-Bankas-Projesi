
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Başarılı</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .success-container {
            text-align: center;
            background-color: #ffffff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

            .success-container h1 {
                font-size: 2.5em;
                color: #28a745; /* Başarı yeşili */
                margin-bottom: 20px;
            }

            .success-container p {
                font-size: 1.2em;
                color: #6c757d;
                margin-bottom: 30px;
            }

            .success-container a {
                display: inline-block;
                padding: 10px 20px;
                font-size: 1.1em;
                color: #ffffff;
                background-color: #007bff; /* Buton mavisi */
                text-decoration: none;
                border-radius: 4px;
                transition: background-color 0.3s ease;
            }

                .success-container a:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
<body>
    <div class="success-container">
        <h1>İstek Başarılı</h1>
        <p>İşleminiz başarıyla gerçekleştirildi.</p>
        <a href="/MainPage/Index">Ana Sayfaya Geri Dön</a>
    </div>
</body>
</html>
