@model CreateRequestDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kan Bağışla</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Sayfa stilini eski sayfalarla uyumlu hale getirelim */
        .donation-form {
            max-width: 600px;
            margin: auto;
            margin-top: 40px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f8f9fa;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        .header-info {
            text-align: center;
            padding-bottom: 20px;
        }

            .header-info h1 {
                font-size: 1.5rem;
                font-weight: bold;
                color: #4A90E2;
            }

            .header-info h2 {
                font-size: 1.2rem;
                color: #2C3E50;
            }

        .input-section {
            font-size: 1.1rem;
            color: #333;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .submit-button {
            background-color: #50C878;
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

            .submit-button:hover {
                background-color: #45b468;
            }
    </style>
</head>
<body>

    <div class="container donation-form">
        <div class="header-info">
            <h1>@Model.NameSurname</h1>
            <h2>Kan Grubu: @Model.BloodTypeName</h2>
        </div>

        <form class="Index" method="post">
            <div class="input-section">
                <label for="donationAmount" class="form-label">Kaç serum kan alacaksınız:</label>
                <input type="number" asp-for="Amount" placeholder="Serum sayısını girin" min="1" required>
            </div>

            <button type="submit" class="submit-button mt-3">Kan talebinde bulun</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

