@model CreateRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Kayıt</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-danger text-white text-center">
                <h3>Kullanıcı Kayıt</h3>
            </div>
            <div class="card-body">
                <form class="CreateUser" method="post" >
                    <div class="form-group">
                        <label asp-for="Name">Ad</label>
                        <input type="text" class="form-control" asp-for="Name" placeholder="Adınızı girin" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Surname">Soyad</label>
                        <input type="text" class="form-control" asp-for="Surname" placeholder="Soyadınızı girin" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input type="email" class="form-control" asp-for="Email" placeholder="Email adresinizi girin" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Şifre</label>
                        <input type="password" class="form-control" asp-for="Password" placeholder="Şifrenizi girin" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BloodTypeId">Kan Grubu</label>
                        <select asp-for="BloodTypeId" class="form-control">
                            <option value="" selected>Kan Grubunuzu Seçin</option>
                            <option value="1">A+</option>
                            <option value="5">A-</option>
                            <option value="2">B+</option>
                            <option value="6">B-</option>
                            <option value="3">AB+</option>
                            <option value="7">AB-</option>
                            <option value="4">0+</option>
                            <option value="8">0-</option>
                        </select>
                        <span asp-validation-for="BloodTypeId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber">Telefon Numarası</label>
                        <input type="tel" class="form-control" asp-for="PhoneNumber" placeholder="Telefon numaranızı girin" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImageUrl">Profil Fotoğrafı URL</label>
                        <input type="url" class="form-control" asp-for="ImageUrl" placeholder="Profil fotoğrafı URL'si girin" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-danger btn-block">Kayıt Ol</button>
                    
                </form>
                <div class="text-center mt-3">
                    <a href="/Login/Index" class="text-danger">Zaten Hesabınız Var Mı? Giriş Yapın</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
