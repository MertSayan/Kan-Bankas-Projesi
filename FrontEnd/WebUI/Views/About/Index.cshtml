@model List<ResultAboutDto>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hakkımızda - Kan Bankası</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #f8f9fa;
            color: #343a40;
            line-height: 1.6;
        }

        .container {
            width: 80%;
            max-width: 1200px;
            margin: auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            font-size: 2.5em;
            margin-bottom: 20px;
            color: #dc3545; /* Kan bankası kırmızısı */
        }

        .section {
            margin-bottom: 40px;
        }

            .section h2 {
                font-size: 1.8em;
                margin-bottom: 10px;
                color: #007bff; /* Başlık mavi rengi */
            }

            .section p {
                font-size: 1.1em;
                margin-bottom: 15px;
            }

        .highlight {
            color: #dc3545; /* Vurgulanan kırmızı */
            font-weight: bold;
        }

        .mission-vision {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: space-between;
        }

            .mission-vision div {
                flex: 1;
                min-width: 300px;
                background-color: #ffffff;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .team-info, .contact-info {
            text-align: center;
        }

            .contact-info p {
                font-size: 1.1em;
            }

            .contact-info a {
                color: #007bff;
                text-decoration: none;
            }

                .contact-info a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    @foreach(var item in Model)
    {
        <div class="container">
        <h1>Hakkımızda</h1>

        <div class="section">
            <p>Kan Bankası olarak, hayat kurtarmaya adanmış bir kuruluşuz. Kan bağışı yoluyla hastaların yaşamlarına umut oluyoruz ve ihtiyaç sahiplerine en hızlı ve güvenilir şekilde ulaşmak için çalışıyoruz. Bizim için her kan bağışı, bir yaşam şansıdır.</p>
        </div>

        <div class="section mission-vision">
            <div>
                <h2>Misyonumuz</h2>
                <p>@item.Misyon</p>
            </div>
            <div>
                <h2>Vizyonumuz</h2>
                <p>@item.Vizyon</p>
            </div>
        </div>

        <div class="section">
            <h2>Kan Bağışının Önemi</h2>
            <p>@item.KanBagisiOnemi</p>
        </div>

        <div class="section team-info">
            <h2>Ekibimiz</h2>
            <p>@item.Ekip</p>
        </div>

        <div class="section contact-info">
            <h2>Bizimle İletişime Geçin</h2>
            <p>Kan bağışı veya hizmetlerimiz hakkında daha fazla bilgi almak için bizimle iletişime geçebilirsiniz:</p>
            <p><strong>Adres:</strong> @item.Adres</p>
            <p><strong>Telefon:</strong> <a href="tel:+900000000000">@item.TelefonNo</a></p>
            <p><strong>Email:</strong> <a href="mailto:info@kanbankasi.com">@item.Email</a></p>
        </div>
    </div>
    }
    
</body>
</html>
