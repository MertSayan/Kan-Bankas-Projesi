@model ResultProfileInformationDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kan Bankası Profil Sayfası</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .profile-card {
            display: flex;
            align-items: center;
            padding: 20px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            background-color: #fff;
            margin-bottom: 20px;
        }

        .profile-image {
            width: 120px;
            height: 120px;
            background-color: #ddd;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 48px;
            color: #888;
            margin-right: 30px;
        }

        .profile-info {
            display: flex;
            justify-content: space-around;
            width: 80%;
            gap: 50px;
            font-size:20px;
        }

            .profile-info div {
                display: flex;
                flex-direction: column;
                gap: 10px;
            }

        .circle {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: #fff;
            font-weight: bold;
            margin: 15px auto;
        }

        .donation-circle {
            background-color: #d9534f;
        }

        .saved-circle {
            background-color: #5cb85c;
        }

        .stat-card {
            margin-top: 20px;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container mt-5">
        <!-- Profil Kartı -->
        <div class="profile-card">
            <div class="profile-image">
                <i class="bi bi-person"></i>
            </div>
            <div class="profile-info">
                <div>
                    <div><strong>Ad:</strong> @Model.Name</div>
                    <div><strong>Soyad:</strong> @Model.Surname</div>
                    <div><strong>Email:</strong> @Model.Email</div>
                </div>
                <div>
                    <div><strong>Rol:</strong> @Model.RoleName</div>
                    <div><strong>Kan Grubu:</strong> @Model.BloodTypeName</div>
                    <div><strong>Telefon No:</strong> @Model.PhoneNumber</div>
                </div>
            </div>
        </div>

        <!-- İstatistik Kartları -->
        <div class="row stat-card">
            <div class="col-md-6">
                <div class="card text-center p-4">
                    <div class="circle donation-circle">
                        40
                    </div>
                    <h5>Bağış Miktarı (Serum)</h5>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-center p-4">
                    <div class="circle saved-circle">
                        30
                    </div>
                    <h5>Kurtarılan İnsanlar (Kişi)</h5>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

